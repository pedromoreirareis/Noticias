<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="styleTabBar" parent="Widget.Design.TabLayout">
        <item name="tabMode">scrollable</item>
        <item name="tabIndicatorHeight">@dimen/tabHeight</item>
        <item name="tabIndicatorColor">@color/tabIndicatorColor</item>
        <item name="tabTextAppearance">?android:attr/textAppearanceMedium</item>
        <item name="tabSelectedTextColor">@color/tabSelectColor</item>
        <item name="tabPaddingEnd">@dimen/margem_tab</item>
        <item name="tabPaddingStart">@dimen/margem_tab</item>
        <item name="tabBackground">?android:selectableItemBackground</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="styleCardView" parent="CardView">
        <item name="android:layout_margin">@dimen/margem_16</item>
        <item name="android:clickable">true</item>
        <item name="cardCornerRadius">@dimen/radius_16</item>
        <item name="cardElevation">@dimen/elevation_16</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <style name="styleImagem">
        <item name="android:minHeight">@dimen/imagemMinHeight</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="styleTitulo" parent="TextAppearance.AppCompat.Body1">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:maxLines">2</item>
        <item name="android:lines">2</item>
        <item name="android:paddingLeft">@dimen/margem_16</item>
        <item name="android:paddingRight">@dimen/margem_16</item>
        <item name="android:paddingTop">@dimen/margem_8</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="styleResumo" parent="TextAppearance.AppCompat.Caption">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:maxLines">3</item>
        <item name="android:lines">3</item>
        <item name="android:paddingTop">@dimen/margem_4</item>
        <item name="android:paddingLeft">@dimen/margem_16</item>
        <item name="android:paddingRight">@dimen/margem_16</item>
        <item name="android:paddingBottom">@dimen/margem_8</item>
    </style>


    <style name="styleDataHora">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:paddingLeft">@dimen/margem_16</item>
        <item name="android:paddingRight">@dimen/margem_16</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>


</resources>
